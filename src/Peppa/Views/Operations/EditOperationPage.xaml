<Page
    x:Class="Peppa.Views.Operations.EditOperationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:Peppa.Controls"
    xmlns:accounts="using:Peppa.ViewModels.Accounts"
    xmlns:categories="using:Peppa.ViewModels.Categories"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <!--Cost-->
                <TextBox x:Name="AmountTextBox" x:Uid="CostTextBox" FontSize="18" Margin="15" Text="{x:Bind _dataContext.AmountTitle, Mode=OneTime}" TextChanging="OnAmountChanging"/>

                <ComboBox x:Name="Types" Header="Type"  HorizontalAlignment="Stretch" SelectedItem="{x:Bind _dataContext.TypeTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" MaxHeight="200" Margin="15"/>

                <!--Date-->
                <CalendarDatePicker x:Name="DatePicker" x:Uid="DatePicker" Date="{x:Bind _dataContext.CreatedOn, Mode=OneTime}" FontSize="18" Margin="15" DateChanged="OnDateChanged" />
                
                <!--Accounts-->                
                <ComboBox x:Name="AccountComboBox" x:Uid="BalancesComboBox" Margin="15"
                          HorizontalAlignment="Stretch" SelectionChanged="OnBalanceSelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="accounts:AccountItemViewModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind Title}" FontSize="18" />
                                <TextBlock Grid.Column="2" Text="{x:Bind BalanceWithCurrencySymbol}" FontSize="18" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!--Categories-->
                <ComboBox x:Name="CategoryComboBox" x:Uid="CategoriesComboBox" Margin="15"
                          HorizontalAlignment="Stretch" SelectionChanged="OnTagSelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="categories:CategoryItemViewModel">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="18" Width="18" Fill="{x:Bind HexColor}" />
                                <TextBlock Text="{x:Bind Title}" FontSize="18" Margin="10 0 0 0" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
               
                <!--Comment-->
                 <TextBox x:Uid="CommentTextBox" Text="{x:Bind _dataContext.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" 
                          Height="200" Margin="15" TextWrapping="Wrap" /> 

            </StackPanel>
        </ScrollViewer>

        <CommandBar Grid.Row="1">
            <AppBarButton x:Uid="SaveAppBarButton" Icon="Save" Click="OnSaveClick" />
            <AppBarButton x:Uid="DeleteAppBarButton" Icon="Delete" Click="OnDeleteClick" />
            <AppBarButton x:Uid="CancelAppBarButton" Icon="Cancel" Click="OnCloseClick" />
        </CommandBar>
    </Grid>

</Page>